{
	"name": "@voxelio/intl",
	"version": "1.1.8",
	"type": "module",
	"description": "Internationalization package for Vite projects, extract keys from tsx/jsx files and automatically generate translation files.",
	"scripts": {
		"build": "tsdown",
		"build:example": "vite build examples",
		"build:watch": "tsdown --watch",
		"check": "tsc --noEmit",
		"example": "vite examples",
		"biome:format": "biome format --write ./src",
		"biome:check": "biome check ./src",
		"biome:unsafefix": "biome check --write --unsafe  ./src"
	},
	"exports": {
		"./plugin": {
			"import": "./dist/plugin.js",
			"types": "./dist/plugin.d.ts"
		},
		"./runtime": {
			"import": "./dist/runtime.js",
			"types": "./dist/runtime.d.ts"
		},
		"./react": {
			"import": "./dist/framework/react.js",
			"types": "./dist/framework/react.d.ts"
		}
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.d.ts",
		"!dist/**/*.map"
	],
	"author": {
		"name": "Hardel",
		"email": "teams.voxel@gmail.com",
		"url": "https://voxel.hardel.io"
	},
	"publishConfig": {
		"access": "public"
	},
	"peerDependencies": {
		"react": ">=18.0.0"
	},
	"dependencies": {
		"oxc-parser": "^0.96.0"
	},
	"devDependencies": {
		"@oxc-project/types": "^0.96.0",
		"@types/react": "^19.2.4",
		"vite": "^7.2.2"
	}
}