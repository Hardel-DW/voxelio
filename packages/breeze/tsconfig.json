{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@test/*": [
                "./test/*"
            ],
            "@benchmark/*": [
                "./benchmark/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}